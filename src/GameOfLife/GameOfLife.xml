n=Math.max(3,n); // insures a 3x3 grid
cells = new int[n][n];
tmpCells = new int[n][n];
for(int i=0; i<n; i++){
  for(int j=0; j<n; j++){
    cells[i][j]=(Math.random()<0.5)?0:1;
  }
}
t = 0;  // resets the time

