public void toggleLife() {
  // gets the mouse pressed coordinates
  int ix = (int) _view.lifeDrawingPanel.getMouseX();
  int iy = (int)_view.lifeDrawingPanel.getMouseY();
  // switches the state of the cell
  cells[ix][iy] = 1 - cells[ix][iy];
}
