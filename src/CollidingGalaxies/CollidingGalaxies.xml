// Put the simulation in Center of Mass frame
public void compute_CM_frame () {
  // compute CM position 
  double Xcm = (M1*x1+M2*x2)/(M1+M2);
  double Ycm = (M1*y1+M2*y2)/(M1+M2);
  
  // Compute CM-position frame for the center & heavy mass
  x1 = x1-Xcm;
  x2 = x2-Xcm;
  y1 = y1-Ycm;
  y2 = y2-Ycm;
  
  // compute CM velocity
  double VXcm = (M1*vx1+M2*vx2)/(M1+M2);
  double VYcm = (M1*vy1+M2*vy2)/(M1+M2);
  
  // Compute CM-velocity frame for the center & heavy mass
  vx1 = vx1-VXcm;
  vx2 = vx2-VXcm;
  vy1 = vy1-VXcm;
  vy2 = vy2-VYcm;
  
  // Compute CM-position & CM-velocity for the stars
  for(int i=0; i<n; i++) {
    sx[i] = sx[i]-Xcm;
    sy[i] = sy[i]-Ycm;
    vsx[i] = vsx[i]-VXcm;
    vsy[i] = vsy[i]-VYcm;
  }  
}
]]></Code>
</Content>
