// Set the initial velocity for each stars
public void gravitational_velocity () {
  double pe= 0.2;              // Percentage of the eventual pericenter radius r
  double dpe= 0.1;             // Percentage increment
  double theta = 0.0;          // angle
  double dtheta = 4*Math.PI/(pe*(n-84));  // angle increment
  for(int i=0; i<n; i++) {
    double R = r*pe;               // Set a new pericenter radius R
    double v = Math.sqrt(M1/R);    // Set the initial velocity
    vsx[i]=-v*Math.sin(theta)+vx1; // Initial x-velocity 
    vsy[i]=v*Math.cos(theta)+vy1;  // Initial y-velocity
    theta += dtheta;               // Increase the angle
    if(theta<=2*Math.PI) continue; // when the angle > 2PI, break out from the loop
    theta = 0.0;                   // reset the angle to zero
    pe += dpe;                     // Increase the pericenter radius
    dtheta= 4*Math.PI/(pe*(n-84)); // reset the angle increment
    theta += dtheta;               // Increase the angle
  }
}
]]></Code>
</Content>
