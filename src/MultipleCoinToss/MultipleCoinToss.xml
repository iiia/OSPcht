<Name>Flip</Name>
<Active>true</Active>
<Internal>false</Internal>
<Content>
<Comment><![CDATA[]]></Comment>
<Code><![CDATA[
public void flip () {
  //if(N!=x.length) setNumberParticles();
  t++;
  headsN=0;
  // random position orientation
  for(int i=0; i<N; i++) {
    x[i]=Math.random();
    y[i]=Math.random();
    if(Math.random()<p){
      images[i]="./MultipleCoinToss/head.gif";
      headsN++;
    }else{
      images[i]="./MultipleCoinToss/tail.gif";
    }
  }
  sumHeads+= headsN;
}
]]></Code>
</Content>
